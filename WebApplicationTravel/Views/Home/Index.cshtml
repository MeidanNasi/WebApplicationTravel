
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}

<div class="fh5co-hero">
    <div class="fh5co-overlay"></div>
    <div class="fh5co-cover" data-stellar-background-ratio="0.5" style="background-image: url(images/cover_bg_1.jpg);">
        <div class="desc">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5 col-md-5">
                        <div class="tabulation animate-box">
                    
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="roundtrip">
                                    <div class="row">
                                        <form action=@Url.Action("calcPath", "Reservations")>
                                        <div class="col-xxs-12 col-xs-6 mt">
                                            <div class="input-field">
                                                <label for="from">From:</label>
                                                <input type="text" class="form-control" id="from-place" name="from" value="tel aviv" />
                                                @if (Session["wrong source"] != null)
                                                {
                                                    <h6 style="color:Tomato;">Wrong Source</h6>
                                                    <h6 style="color:Tomato;">Please try again.</h6>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-xxs-12 col-xs-6 mt">
                                            <div class="input-field">
                                                <label for="from">To:</label>
                                                <input type="text" class="form-control" id="to-place" name="dest" placeholder="rome" />
                                                @if (Session["wrong dest"] != null)
                                                {
                                                    <h6 style="color:Tomato;">Wrong Destination!</h6>
                                                    <h6 style="color:Tomato;">Please try again.</h6>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-xxs-12 col-xs-6 mt alternate">
                                            <div class="input-field">
                                                <label for="date-start">Departure date:</label>
                                                <input type="text" class="form-control" id="date-start" name="date" placeholder="mm/dd/yyyy" />
                                            </div>
                                        </div>
                                       
                                        <div class="col-xxs-12 col-xs-6 mt">
                                        </div>
                                        <div class="col-xs-12">
                                            <input type="submit" class="btn btn-primary btn-block" name="submit" value="Find me the cheapest way!">
                                            @*@if (Session["no path"] != null)
                                            {
                                                <h6 style="color:Tomato;">No path!</h6>
                                                    <h6 style="color:Tomato;">Please try again.</h6>
                                            }*@
                                        </div>
                                        <div class="col-xs-12">
                                            <br>
                                            <input type="submit" class="btn btn-primary btn-block" name="submit" value="Find me the fastest way!">
                                            @if (Session["no path"]!=null)
                                            {
                                                <h6 style="color:Tomato;">No path!</h6>
                                                    <h6 style="color:Tomato;">Please try again.</h6> 
                                            }
                                            @Session["no path"]
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="desc2 animate-box">
                        <div class="col-sm-15 col-sm-push-10 col-md-7 col-md-push-1">

                            <h2>Welcome to MSG</h2>
                            <h3>The gratest way to find your next vocation!</h3>
                            <img src="@Url.Content("~/Content/MyTemplate/")images/giphy.gif" alt="Free HTML5 Website Template by FreeHTML5.co" class="img-responsive">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

